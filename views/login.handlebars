<div class='forms-wrapper'>
    <div class='login-container'>
        <h2>Login</h2>
        <form id='login-form'>
            <div class='form-group'>
                <label for='email-login'>Email:</label>
                <input class='input-field' type='text' id='email-login' />
            </div>
            <div class='form-group'>
                <label for='password-login'>Password:</label>
                <input class='input-field' type='password' id='password-login' />
            </div>
            <div class='form-group'>
                <button class='submit-button' type='submit'>Login</button>
            </div>
        </form>
    </div>

    <div class='signup-container'>
        <h2>Signup</h2>
        <form id='signup-form'>
            <div class='form-group'>
                <label for='first-name-signup'>First Name:</label>
                <input class='input-field' type='text' id='first-name-signup' />
            </div>
            <div class='form-group'>
                <label for='last-name-signup'>Last Name:</label>
                <input class='input-field' type='text' id='last-name-signup' />
            </div>
            <div class='form-group'>
                <label for='email-signup'>Email:</label>
                <input class='input-field' type='text' id='email-signup' />
            </div>
            <div class='form-group'>
                <label for='password-signup'>Password:</label>
                <input class='input-field' type='password' id='password-signup' />
            </div>
            <div class='form-group'>
                <button class='submit-button' type='submit'>Signup</button>
            </div>
        </form>
    </div>
</div>

<script src='../public/js/login.js'></script>

</body>

</html>